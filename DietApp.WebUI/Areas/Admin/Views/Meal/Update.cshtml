@model MealUpdateVM

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

@{    
    if (ViewData["Errors"] != null)
    {
        <h4>@ViewData["Errors"].ToString()</h4>
    }
}

<h4>MealUpdateVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update" asp-controller="Meal" asp-area="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="MealName" class="control-label"></label>
                <input asp-for="MealName" class="form-control" />
                <span asp-validation-for="MealName" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
